	<logger name="com.blob">
		<level value="info" />
		<appender-ref ref="FILE" />
		<appender-ref ref="STDOUT" />
	</logger>

	<logger name="org.hibernate.SQL" level="ERROR">
		<appender-ref ref="FILE" />
		<appender-ref ref="ERROR" />
	</logger>
	<logger name="org.hibernate.type">
		<level value="ERROR" />
		<appender-ref ref="FILE" />
	</logger>
</configuration>
